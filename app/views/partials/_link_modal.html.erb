<div class="modal fade modal-login" id="short-modal" tabindex="-1" role="dialog" aria-labelledby="login" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="row">
        <div class="col-sm-12">
          <div class="modal-header">
            <h4 class="modal-title" id="exampleModalLabel">Shorten Success!</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="javascript:window.location.reload()">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="thumb">
              <img class="img-responsive" style="margin:0 auto; width: 40%" src="<%= image_path "win.png"%>" alt="win">
            </div>
            <br><br>
            <h5 style="text-align: center">Here is your shortened url.</h5>
            <p class="result"><%= link %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#short-modal').on('hidden.bs.modal', function () {
    location.reload();
  })
</script>
